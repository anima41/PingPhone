<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.redandborder.pingphone" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SkypeSetting"
            android:label="@string/title_activity_skype_setting" >
        </activity>
        <activity
            android:name=".Standby"
            android:label="@string/title_activity_standby" >
        </activity>
        <activity
            android:name=".PasswordSetting"
            android:label="@string/title_activity_password_setting" >
        </activity>
        <activity
            android:name=".History"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name=".Debug"
            android:label="@string/title_activity_debug" >
        </activity>
        <activity
            android:name=".SettingsMenu"
            android:label="@string/title_activity_settings_menu" >
        </activity>
    </application>
    <uses-permission android:name="android.permission.GET_TASKS" />

</manifest>
